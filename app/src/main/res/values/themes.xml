<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fincord" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fincord_blue_700</item>
        <item name="colorPrimaryVariant">@color/fincord_blue_800</item>
        <item name="colorOnPrimary">@color/fincord_orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fincord_orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialDividerStyle">@style/Widget.App.MaterialDividerLight</item>
    </style>

</resources>